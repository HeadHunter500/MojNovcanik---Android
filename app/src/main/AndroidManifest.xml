<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.matko.mojnovcanik" >

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Registracija"
            android:label="@string/title_activity_registracija" >
        </activity>
        <activity
            android:name=".Info"
            android:label="@string/title_activity_info" >
        </activity>
        <activity
            android:name=".Iznos"
            android:label="@string/title_activity_iznos" >
        </activity>
        <activity
            android:name=".PopisUplata"
            android:label="@string/title_activity_popis_uplata" >
        </activity>
        <activity
            android:name=".PopisIsplata"
            android:label="@string/title_activity_popis_isplata" >
        </activity>
        <activity
            android:name=".Uplata"
            android:label="@string/title_activity_uplata" >
        </activity>
        <activity
            android:name=".Isplata"
            android:label="@string/title_activity_isplata" >
        </activity>
    </application>

</manifest>
