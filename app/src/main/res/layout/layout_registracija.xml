<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#b6a1a3aa"
    tools:context="com.example.matko.mojnovcanik.Registracija">

//naslov
    <TextView android:text="Unesite podatke" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:id="@+id/registracija"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

//polje za korisničko ime
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/usernameReg"
        android:hint="Korisničko ime"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />

//polje za lozinku
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/lozinkaReg1"
        android:hint="Lozinka"

        android:layout_alignLeft="@+id/usernameReg"
        android:layout_alignStart="@+id/usernameReg"
        android:layout_marginTop="140dp" />

    //polje za ponovni unos lozinke
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/lozinkaReg2"
        android:hint="Ponovite lozinku"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp" />

    //gumb za registraciju
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registriraj se"
        android:id="@+id/registracijaReg"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="280dp"
        android:onClick="Registriranje"/>

</RelativeLayout>
